@model IEnumerable<CarWashApps.Models.Data.User>
@{
    ViewData["Title"] = "Пользователи";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Пользователи</li>
    </ol>
</nav>
<h2>Пользователи</h2>

<h6>
    <a class="text-dark" asp-action="Create">
        <i class="far fa-plus-square"></i>  Добавить пользователя
    </a>
</h6>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Поиск по фамилии: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Поиск" class="btn btn-default" /> |
            <a asp-action="Index">Вернуться ко всему списку</a>
        </p>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered text-nowrap table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SurnameSortParm"]">@Html.DisplayNameFor(model => model.Surname)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameUserSortParm"]">@Html.DisplayNameFor(model => model.NameUser)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RegDateSortParm"]">@Html.DisplayNameFor(model => model.RegDate)</a>
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegDate)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a class="btn text-dark" asp-action="Edit" asp-route-id="@item.Id" title="Редактировать">
                            <i class="fas fa-pencil-alt"></i>
                        </a> |
                        <a class="btn text-dark" asp-action="Delete" asp-route-id="@item.Id" title="Удалить">
                            <i class="far fa-minus-square"></i>
                        </a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>