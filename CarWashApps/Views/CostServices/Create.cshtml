@model CarWashApps.ViewModels.CostServices.CreateCostServiceViewModel

@{
    ViewData["Title"] = "Создание стоимости услуги";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="CostServices" asp-action="Index">Список цен</a></li>
        <li class="breadcrumb-item active">Создание</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Добавление специальности
</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="IdService" class="control-label"></label>
                <select asp-for="IdService" class ="form-control" asp-items="ViewBag.IdService"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" type="number" step="any"/>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateCost" class="control-label"></label>
                <input asp-for="DateCost" class="form-control" />
                <span asp-validation-for="DateCost" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
